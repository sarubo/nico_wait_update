{
  "manifest_version": 2,
  "name": "nico_wait_update",
  "version": "1.4.3",
  "description": "ニコニコでのショートカットキーの挙動の変更と追加",
  "icons": {
    "512": "icons/icon.svg",
    "256": "icons/icon.svg",
    "128": "icons/icon.svg",
    "32" : "icons/icon.svg"
  },
  "applications": {
    "gecko": {
      "id": "sarubo2016@gmail.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.nicovideo.jp/watch/*"
      ],
      "js": [ "script/www_nico.js" ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://live.nicovideo.jp/watch/*"
      ],
      "js": [ "script/live_nico.js" ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.nicovideo.jp/search/*",
        "*://www.nicovideo.jp/tag/*"
      ],
      "js": [ "script/remove_ad_video.js" ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.nicovideo.jp/*",
        "*://dic.nicovideo.jp/*"
      ],
      "js": [ "script/remove_ad.js" ],
      "run_at": "document_start"
    },
    {
      "matches": [ "*://anime.nicovideo.jp/*" ],
      "js": [ "script/remove_ad_on_anime.js" ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage"
  ]
}
